{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$lib/*": ["src/lib/*"],
      "$styles/*": ["src/styles/*"],
      "$svg/*": ["src/svg/*"]
    },
    "types": ["@cloudflare/workers-types/2023-07-01"]
  },
  "exclude": ["node_modules"]
}
